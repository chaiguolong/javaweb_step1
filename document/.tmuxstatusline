# This tmux statusbar config was created by tmuxline.vim
# on Fri, 17 Jan 2020

set -g status-justify "centre"
set -g status "on"
set -g status-attr "none"
set -g message-command-bg "colour246"
set -g status-left-length "100"
set -g pane-active-border-fg "colour246"
set -g status-bg "colour236"
set -g message-command-fg "colour236"
set -g pane-border-fg "colour239"
set -g message-bg "colour246"
set -g status-left-attr "none"
set -g status-right-attr "none"
set -g status-right-length "100"
set -g message-fg "colour236"
setw -g window-status-fg "colour103"
setw -g window-status-attr "bold"
setw -g window-status-activity-bg "colour236"
setw -g window-status-activity-attr "underscore"
setw -g window-status-activity-fg "colour103"
setw -g window-status-separator ""
setw -g window-status-bg "colour236"
set -g status-left "#[fg=colour236,bg=colour246] 会话#S #[fg=colour246,bg=colour239,nobold,nounderscore,noitalics]#[fg=colour246,bg=colour239] #W #[fg=colour239,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour246,bg=colour236] #h #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour246,bg=colour236] %a #[fg=colour239,bg=colour236,nobold,nounderscore,noitalics]#[fg=colour246,bg=colour239] #W | %R #[fg=colour246,bg=colour239,nobold,nounderscore,noitalics]#[fg=colour236,bg=colour246] #h "
setw -g window-status-format "#[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour236,bg=colour236,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour236,bg=colour246,nobold,nounderscore,noitalics]#[fg=colour236,bg=colour246,bold] #I #W #[fg=colour246,bg=colour236,nobold,nounderscore,noitalics]"
